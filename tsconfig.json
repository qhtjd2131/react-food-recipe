{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",                       
    "module": "esnext",                   
    "allowJs": true,       
    "strict": true,
    "sourceMap": true,                              
    "esModuleInterop": true,             
    "noImplicitAny": true,          
    "forceConsistentCasingInFileNames": true,                
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}